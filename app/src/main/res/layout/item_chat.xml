<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="70dp">
    <ImageView
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/chatitem_imageview"
        android:src="@drawable/baseline_chat_black_36"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chat_room_name"
        android:textSize="20sp"
        android:id="@+id/chatitem_textview_title"/>
        <TextView
            android:id="@+id/chatitem_textview_lastMessage"
            android:text="Last_message"
            android:textColor="@android:color/darker_gray"

            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/chatitem_textview_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020.02.02"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"

            />
    </RelativeLayout>
</LinearLayout>